<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/popup_layout"
    android:background="?colorPopUpBackground"
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/popup_icon"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            android:src="@drawable/nowifi_icon_popup" />

        <TextView
            android:id="@+id/popup_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="@dimen/ob_desc_padding"
            android:paddingRight="@dimen/ob_desc_padding"
            android:text="@string/popup_title_STT"
            android:textAllCaps="true"
            android:textColor="?colorPopUpText"
            android:textSize="@dimen/ob_header_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/popup_description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:paddingLeft="@dimen/ob_desc_padding"
            android:paddingRight="@dimen/ob_desc_padding"
            android:text="@string/popup_description_STT"
            android:textColor="?colorPopUpText"
            android:textSize="16sp" />

        <Button
            android:id="@+id/popup_btn_settings_STT"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/settings_icon_popup"
            android:text="@string/popup_btn_setting"
            android:textColor="?colorPopUpText"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/popup_btn_close"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="?colorMyMessage"
        android:contentDescription="@string/popup_btn_close"
        android:text="@string/popup_btn_close"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="?colorPopUpText"
        android:textSize="@dimen/button_text" />

</RelativeLayout>