<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CustomTheme2" parent="Theme.AppCompat.Light">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:listDivider">@null</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="CustomTheme2.Day">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="colorMyMessage">@color/colorMyMessage</item>
        <item name="colorTheirMessage">@color/colorTheirMessage</item>
        <item name="colorPopUpText">@color/colorPopUpText</item>
        <item name="colorMessageInput">@color/colorMessageInput</item>
        <item name="colorHawkingTitle">@color/colorText</item>
        <item name="colorPopUpBackground">@color/colorPrimary</item>
        <item name="colorPulseView">@color/colorPulseView</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="CustomTheme2.Night">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/colorPrimaryNight</item>
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="android:textColorPrimary">@color/colorTextNight</item>
        <item name="android:textColorSecondary">@color/colorTextSecondryNight</item>
        <item name="colorMyMessage">@color/colorMyMessageNight</item>
        <item name="colorTheirMessage">@color/colorTheirMessageNight</item>
        <item name="colorPopUpText">@color/colorPopUpTextNight</item>
        <item name="colorMessageInput">@color/colorMessageInputNight</item>
        <item name="colorHawkingTitle">@color/colorTextSecondryNight</item>
        <item name="colorPopUpBackground">@color/colorPrimaryNight</item>
        <item name="colorPulseView">@color/colorPulseViewNight</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="CustomTheme2.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomTheme2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CustomTheme2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
